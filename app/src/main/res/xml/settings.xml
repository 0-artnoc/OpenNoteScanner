<?xml version="1.0" encoding="utf-8"?>
    <PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory
            android:title="Basic Settings"
            android:persistent="false">
            <PreferenceScreen
                android:title="Automatic Tagging"
                android:summary="Define automatic tags to be applied on marked scans using the special page template"
                >
            <EditTextPreference
                android:name="tag_rocket"
                android:title="Rocket"
                android:defaultValue="rocket"
                android:key="tag_rocket"></EditTextPreference>
            <EditTextPreference
                android:name="tag_gift"
                android:title="Gift"
                android:defaultValue="gift"
                android:key="tag_gift"></EditTextPreference>
            <EditTextPreference
                android:name="tag_tv"
                android:title="TV"
                android:defaultValue="tv"
                android:key="tag_tv"></EditTextPreference>
            <EditTextPreference
                android:name="tag_bell"
                android:title="Bell"
                android:defaultValue="bell"
                android:key="tag_bell"></EditTextPreference>
            <EditTextPreference
                android:name="tag_game"
                android:title="Game"
                android:defaultValue="game"
                android:key="tag_game"></EditTextPreference>
            <EditTextPreference
                android:name="tag_star"
                android:title="Star"
                android:defaultValue="star"
                android:key="tag_star"></EditTextPreference>
            <EditTextPreference
                android:name="tag_magnet"
                android:title="Magnet"
                android:defaultValue="magnet"
                android:key="tag_magnet"></EditTextPreference>
            </PreferenceScreen>
            <CheckBoxPreference
                android:title="Match preview aspect ratio"
                android:defaultValue="true"
                android:key="match_aspect"
                android:summary="Most devices have the highest resolution picture aspect ratio different from the preview one, this setting will select the highest picture resolution that matches with the aspect ratio of preview"
                ></CheckBoxPreference>
            <CheckBoxPreference
                android:title="Rotate Image 180ยบ"
                android:defaultValue="false"
                android:key="bug_rotate"
                android:summary="Some devices have the camera upside down, this setting adjust everything to make sense"
                ></CheckBoxPreference>
        </PreferenceCategory>
    <PreferenceCategory
        android:title="Feedback"
        android:persistent="false">
        <CheckBoxPreference
            android:title="Usage Statistics"
            android:defaultValue="false"
            android:key="privacy_stats"
            android:summary="Send various usage statistics to developer. No content data will be sent"
            ></CheckBoxPreference>
        <CheckBoxPreference
            android:title="Unique ID"
            android:defaultValue="false"
            android:key="privacy_uuid"
            android:summary="Use an anonymous unique device identificator"
            ></CheckBoxPreference>
        <Preference
            android:title="Send Message"
            android:summary="Send message to developer"
            android:persistent="false">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="mailto:claudemir@todobom.com"
                ></intent></Preference>

    </PreferenceCategory>

</PreferenceScreen>